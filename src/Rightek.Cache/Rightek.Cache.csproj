<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Mehdi Dehghani</Authors>
    <Company>Rightek</Company>
    <Copyright>Rightek</Copyright>

    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>

    <RepositoryUrl>https://github.com/rightek/rightek.cache</RepositoryUrl>
    <PackageProjectUrl>https://github.com/rightek/rightek.cache</PackageProjectUrl>
    <PackageReadmeFile>https://github.com/rightek/rightek.cache/blob/master/README.md</PackageReadmeFile>

    <PackageId>Rightek.Cache</PackageId>
    <Title>Rightek.Cache</Title>
    <Description>Simple wrapper around `System.Runtime.Caching`</Description>
    <PackageTags>netstandard netcore cache memorycache</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Runtime.Caching" Version="4.6.0" />
  </ItemGroup>

</Project>
